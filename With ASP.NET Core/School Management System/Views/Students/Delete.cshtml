@model School_Management_System.Models.Student
@{
    ViewData["Title"] = "Delete";
}

<div class="card row col-lg-8 mx-auto mt-3">
    <h1 class=" card-header alert alert-danger">Are you sure you want to delete this?</h1>
    <div class="card-body mx-4">
        <div class="row mb-2">
            <div class="col-2">
                <b>@Html.DisplayNameFor(model => model.StudentName) :</b>
            </div>
            <div class="col-5">
                @Html.DisplayFor(model => model.StudentName)
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-2">
                <b>@Html.DisplayNameFor(model => model.Class) :</b>
            </div>
            <div class="col-5">
                @Html.DisplayFor(model => model.Class)
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-2">
                <b>@Html.DisplayNameFor(model => model.DateofBirth) :</b>
            </div>
            <div class="col-5">
                @Html.DisplayFor(model => model.DateofBirth)
            </div>
        </div>



        <div class="row mb-2">
            <div class="col-2">
                <b>@Html.DisplayNameFor(model => model.Image) :</b>
            </div>
            <div class="col-5">
                <img src="@Model.Image" alt="Image" width="100" />
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-2">
                <b>Selected Subject :</b>
            </div>
            <div class="col-5">
                <ul>
                    @foreach (var item in Model.StudentSubjects)
                    {
                        <li>@item.Subject.SubjectName</li>
                    }
                </ul>
            </div>
        </div>

        <div class="row mb-2">
            <div class="col-2">
                <b>@Html.DisplayNameFor(model => model.IsRegular) :</b>
            </div>
            <div class="col-5">
                @(Model.IsRegular == true ? "Yes" : "No")
            </div>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="StudentId" />
            <div class="row">
                <div class="offset-2">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-start">
            <a asp-action="Index" class="btn btn-link btn-sm text-decoration-none"><i class="fa fa-arrow-circle-left"></i> Back to List</a>
        </div>
    </div>
</div>

