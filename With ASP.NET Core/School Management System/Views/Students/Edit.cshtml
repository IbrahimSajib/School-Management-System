@model School_Management_System.ViewModels.StudentVM
@{
    ViewData["Title"] = "Edit";
}

<h2 class="alert alert-success text-center mt-2">Update Student Data</h2>
<form asp-action="Edit" asp-controller="Students" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-7">
            <div class="card">
                <div class="card-header text-center">
                    <h3>Student Information</h3>
                </div>
                <div class="card-body ms-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="StudentId" type="hidden" />
                    <input asp-for="Image" type="hidden" />
                    <div class="row mb-2">
                        <div class="col-3">
                            <label asp-for="StudentName" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="StudentName" class="form-control form-control-sm" />
                        </div>
                        <div class="col-4">
                            <span asp-validation-for="StudentName" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mb-2">
                        <div class="col-3">
                            <label asp-for="DateofBirth" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="DateofBirth" class="form-control form-control-sm" type="date" />
                        </div>
                        <div class="col-4">
                            <span asp-validation-for="DateofBirth" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mb-2">
                        <div class="col-3">
                            <label asp-for="Class" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="Class" class="form-control form-control-sm" />
                        </div>
                        <div class="col-4">
                            <span asp-validation-for="Class" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mb-2">
                        <div class="col-3">
                            <label asp-for="ImagePath" class="col-form-label"></label>
                        </div>
                        <div class="col-5">
                            <input asp-for="ImagePath" class="form-control form-control-sm" />
                        </div>
                        <div class="col-4">
                            <span asp-validation-for="ImagePath" class="text-danger"></span>
                        </div>
                    </div>


                    <div class="row mb-2">
                        <div class="col-3">
                            <label asp-for="IsRegular" class="col-form-label"></label>
                        </div>
                        <div class="col-5 align-middle">
                            <input asp-for="IsRegular" />
                        </div>
                        <div class="col-4">
                            <span asp-validation-for="IsRegular" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>

        </div>
        <div class="col-5">
            <div class="card" style="min-height:320px">
                <div class="card-header text-center">
                    <h3>Select Subject</h3>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-end mb-3 me-5">
                        <a id="btnPlus" class="btn btn-warning"><i class="fa fa-plus"></i> Add New</a>
                    </div>
                    <div id="subjectContainer">
                        @foreach (var item in Model.SubjectList)
                        {
                            <script>
                                LoadData(@item)
                            </script>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-end mt-2">
            <input type="submit" value="Update Data" class="btn btn-success btn-lg" />
        </div>

    </div>
</form>

<div class="card-footer">
    <div class="d-flex justify-content-start">
        <a asp-action="Index" class="btn btn-link btn-sm text-decoration-none"><i class="fa fa-arrow-circle-left"></i> Back to List</a>
    </div>
</div>